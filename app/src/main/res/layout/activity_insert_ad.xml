<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActivitiesPackage.InsertAd">

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:max="100"
        android:progress="@android:integer/config_longAnimTime"
        android:indeterminate="false"
        android:layout_alignTop="@+id/thumbtailImage"
        android:layout_above="@+id/buttonSendAd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button_upload_img_ad"
        android:layout_alignRight="@+id/thumbtailImage"
        android:layout_alignEnd="@+id/thumbtailImage" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a photo"
        android:id="@+id/button_upload_img_ad"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/choseFromGallery"
        android:textColor="#ffffff"
        android:background="@drawable/optionscreen_bottomrectangle"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert ad"
        android:id="@+id/buttonSendAd"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:background="@drawable/optionscreen_bottomrectangle" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:background="@drawable/edit_text_style"
        android:ems="10"
        android:id="@+id/thumbtailImage"
        android:layout_alignBottom="@+id/choseFromGallery"
        android:layout_alignTop="@+id/button_upload_img_ad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button_upload_img_ad"
        android:layout_alignRight="@+id/UntilEditText"
        android:layout_alignEnd="@+id/UntilEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Description :"
        android:id="@+id/textView2"
        android:textColor="#000000" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chose from gallery"
        android:id="@+id/choseFromGallery"
        android:layout_above="@+id/buttonSendAd"
        android:layout_alignRight="@+id/buttonSendAd"
        android:layout_alignEnd="@+id/buttonSendAd"
        android:layout_alignLeft="@+id/button_upload_img_ad"
        android:layout_alignStart="@+id/button_upload_img_ad"
        android:textColor="#ffffff"
        android:background="@drawable/optionscreen_bottomrectangle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="datetime"
        android:hint="Date From"
        android:ems="10"
        android:id="@+id/FromEditText"
        android:layout_above="@+id/UntilEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/UntilEditText"
        android:hint="Date Until"
        android:layout_alignTop="@+id/priceEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price :"
        android:hint="0"
        android:id="@+id/textView6"
        android:textColor="#000000"
        android:layout_above="@+id/priceEditText"
        android:layout_alignLeft="@+id/priceEditText"
        android:layout_alignStart="@+id/priceEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/priceEditText"
        android:layout_above="@+id/progressBar"
        android:layout_toEndOf="@+id/progressBar"
        android:inputType="numberSigned|numberDecimal"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/button_upload_img_ad"
        android:layout_alignStart="@+id/button_upload_img_ad" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/radioGroup"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_below="@+id/DescriptionEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/FromEditText"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Type :"
            android:id="@+id/textView_typology"
            android:textColor="#000000"
            android:layout_above="@+id/radioGroup"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="left" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:id="@+id/radioButton_buy2"
            android:checked="true"
            android:layout_alignTop="@+id/findradioButton"
            android:layout_toRightOf="@+id/findradioButton"
            android:layout_toEndOf="@+id/findradioButton"
            android:layout_gravity="left" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sell"
            android:id="@+id/radioButton_sell2"
            android:checked="false"
            android:layout_gravity="left" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exchange"
            android:id="@+id/radioButton_exchange2"
            android:checked="false"
            android:layout_gravity="left" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donate"
            android:id="@+id/radioButton_donate2"
            android:checked="false"
            android:layout_gravity="left" />

    </RadioGroup>



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:lines="8"
        android:minLines="8"
        android:maxLines="20"
        android:scrollbars="vertical"
        android:background="@color/button_material_light"
        android:ems="10"
        android:id="@+id/DescriptionEditText"
        android:textAlignment="inherit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/radioGroup"

        android:layout_below="@+id/textView2"
        android:gravity="top|left"
        android:layout_alignRight="@+id/radioGroup"
        android:layout_alignEnd="@+id/radioGroup"
        android:layout_marginTop="5dp">
        <requestFocus/>
    </EditText>

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_alignBottom="@+id/choseFromGallery"
        android:layout_alignTop="@+id/choseFromGallery"
        android:id="@+id/space"
        android:layout_toRightOf="@+id/progressBar"
        android:layout_toLeftOf="@+id/button_upload_img_ad"
        android:layout_toStartOf="@+id/button_upload_img_ad" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/camera_icon"
        android:layout_alignTop="@+id/progressBar"
        android:layout_above="@+id/choseFromGallery"
        android:layout_toRightOf="@+id/progressBar"
        android:layout_alignRight="@+id/space"
        android:layout_alignEnd="@+id/space" />

</RelativeLayout>
